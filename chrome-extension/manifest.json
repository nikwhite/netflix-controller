{
  "manifest_version": 2,
  "name": "Netflix Controller",
  "author": "Nik White",
  "description": "Control Netflix from any Chrome browser",
  "version": "0.0.1",
  "icons": { 
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png" 
  },
  "app": {
    "background": {
      "scripts": ["tcp-server.js"]
    }
  },
  "content_scripts": [{
      "matches": ["*://*.netflix.com/*"],
      "js": [
        "socket.io-1.3.5.js", 
        "jquery-2.1.3.js", 
        "netflix-controller.js"
      ],
      "css": [
        "netflix-controller.css"
      ]
  }],
  "permissions": ["tabs"],
  "sockets":{
    "tcpServer": {
      "listen": ":8889"
    }
  }
}